<%= form_for(@affinity) do |f| %>
  
  <% if @affinity.errors.any? %>
  <div id="errorExplanation">
    <h2><%= pluralize(@affinity.errors.count, "error") %> prohibited Affinity from being saved:</h2>
  </div>
  <% end %>
 
  <div class="field">
    <%= f.label :affinity_name, "Name*" %><br />
    <%= f.text_field :affinity_name %>
  </div>

  <div class="field">
    <%= f.label :affinity_short_name %><br />
    <%= f.text_field :affinity_short_name %>
  </div>

  <div class="field">
    <%= f.label :affinity_note %><br />
    <%= f.text_field :affinity_note %>
  </div>

  <div class="field">
    <%= f.label :affinity_classification_id, "Classification*" %><br />
    <%= f.select(:affinity_classification_id, Naf::AffinityClassification.all.map{|a| 
        [a.affinity_classification_name, a.id] 
     }, {:include_blank => true}) %>
  </div>

  <div class="field">
    <%= f.label :selectable %></br />
    <%= f.check_box :selectable %>
  </div>


  <br />
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
