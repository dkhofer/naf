<%= form_for(@application) do |f| %>
  
  <% if @application.errors.any? %>
  <div id="errorExplanation">
    <h2><%= pluralize(@application.errors.count, "error") %> prohibited this application from being saved:</h2>
    
    <ul>
      <% @application.errors.full_messages.each do |msg| %> 
        <li><%= msg %></li>
      <% end %>
    </ul>
  </div>
  <% end %>
 
  <div class="field">
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :command %><br />
    <%= f.text_field :command %>
  </div>


  <div class="field">
    <%= f.label :application_type %></br />
    <%= f.select(:application_type_id, ::Naf::ApplicationType.all.map{ |a| [a.script_type_name, a.id]}, {:include_blank => true} )%>
  </div>

  <div class="field">
    <%= f.label :log_level %><br />
    <%= f.text_field :log_level %>
  </div>


  <%= f.fields_for :application_schedule do |schedule_fields| %>

     <br />
     <br />
    <div class="field">
      <%= schedule_fields.label :_destroy, "Remove Schedule" %>
      <%= schedule_fields.check_box :_destroy %>
    </div>


  <h2 style="">Schedule</h2>


    <%= schedule_fields.hidden_field :application_id %>

    <div class="field">
      <%= schedule_fields.label :run_group_restriction %><br />
      <%= schedule_fields.select(:application_run_group_restriction_id, ::Naf::ApplicationRunGroupRestriction.all.map{ |a| [a.application_run_group_restriction_name, a.id] }, :include_blank => true) %>
    </div>
    
    <div class="field">
      <%= schedule_fields.label :run_group_name %></br />
      <%= schedule_fields.text_field :application_run_group_name %>
    </div>
    
    
    <div class="field">
      <%= schedule_fields.label "Run Start Time" %></br />
      <%= schedule_fields.text_field :run_start_minute %>
    </div>
    
    <div class="field">
      <%= schedule_fields.label "Run Interval (minutes)" %></br />
      <%= schedule_fields.text_field :run_interval %>
    </div>
    
    <div class="field">
      <%= schedule_fields.label :priority %>  <br />
      <%= schedule_fields.text_field :priority %>
    </div>

    <div class="field">
      <%= schedule_fields.label :application_run_group_limit %>  <br />
      <%= schedule_fields.text_field :application_run_group_limit %>
    </div>
    
    <div class="field">
      <%= schedule_fields.label :enabled %>  <br />
      <%= schedule_fields.check_box :enabled %>
    </div>
    
    <div class="field">
      <%= schedule_fields.label :visible %>  <br />
      <%= schedule_fields.check_box :visible %>
    </div>

  <% end %>

  <br />
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
