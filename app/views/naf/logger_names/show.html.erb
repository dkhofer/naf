<% content_for :body do %>
  <div id="flash_message">
      <% unless notice.blank? %>
        <script type='text/javascript'>
          jQuery("<p id='notice'><%= notice %></p>")
              .appendTo('#flash_message')
              .slideDown().delay(5000).slideUp();
        </script>
      <% end %>
  </div>

  <div id="record">
    <h2>Logger Name</h2>
    <%= link_to 'Back to Logger Names', logger_names_path %>
    &nbsp;&nbsp;&nbsp;|&nbsp;&nbsp;&nbsp;
    <%= link_to 'Edit', edit_logger_name_path(@logger_name) %>
    </br>
    </br>

    <table id="naf_table_show">
      <thead>
        <tr>
          <th>Attribute</th>
          <th>Value</th>
        </tr>
      </thead>
      <tbody>
        <% @logger_name.attributes.each do |key, value| -%>
        <tr>
          <td><%= make_header(key) %></td>
          <td><%= value %></td>
        </tr>
        <% end -%>
      </tbody>
    </table>
    </br>

    <%= link_to "Destroy", @logger_name,
        { confirm: "Are you sure you want to destroy this Logger Name?",
          method: :delete,
          class: 'destroy' } %>
  </div>
<% end %>
<%= render partial: 'naf/shared/application' %>