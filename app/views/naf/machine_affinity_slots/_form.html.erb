<%= form_for([@machine, @slot]) do |f| %>

  <% if @slot.errors.any? %>
  <div id="errorExplanation">
    <h2><%= pluralize(@slot.errors.count, "error") %> prohibited this Machine Affinity Slot from being saved:</h2>
  </div>
  <% end %>

  <%= f.hidden_field :machine_id, value: @machine.id %>

  <div class="field">
    <%= f.label :affinity_id, "Affinity*" %></br>
    <%= f.select(:affinity_id, ::Naf::Affinity.names_list, include_blank: true) %>
  </div>
  </br>

  <div class="field">
    <%= f.label :affinity_parameter %></br>
    <%= f.text_field :affinity_parameter %>
  </div>
  </br>

  <div class="field">
    <%= f.label :required %></br>
    <%= f.check_box :required %>
  </div>
  </br>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
